#-*- coding: utf-8 -*-

TextWidget:

<TextWidget>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            text_size: self.size
            id: label1
            font_size: 50
            text: root.text
            halign: 'left'
            valign: 'top'
            padding_x: 35
            padding_y: 20
            
        
        BoxLayout:
            size_hint_y: 0.2
            padding: 30,30,30,10
            Button:
                id: button_start
                text: '開始'
                font_size: 30
                on_press: root.buttonClickedStart()
            
            Button:
                id: button_end
                text: '終了'
                font_size: 30
                on_press: root.buttonClickedEnd()